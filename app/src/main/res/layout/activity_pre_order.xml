<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preoder.ui.PreOrder">

    <RelativeLayout
        android:id="@+id/reloOne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">



    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:tint="@android:color/darker_gray"
        android:tintMode="multiply"
        android:layout_height="@dimen/_150sdp"
        android:id="@+id/allHotelCoverImage"/>


        <ImageView
            android:id="@+id/preOrderImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/norest"
            android:layout_marginLeft="@dimen/_16sdp"/>

        <TextView
            android:id="@+id/restNameHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/preOrderImage"
            style="@style/bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Restaraunt Name"
            android:layout_marginLeft="@dimen/_16sdp"
            android:textColor="@android:color/white"/>


    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_14sdp"
        android:src="@drawable/arrow_left"/>
    <TextView
        android:id="@+id/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserve_your_table_right_from_here"
        style="@style/semiBold"
        android:layout_below="@+id/reloOne"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_16sdp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/normalText"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/tableRecycler"
            android:layout_margin="@dimen/_6sdp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:layout_below="@id/normalText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:layout_margin="@dimen/_4sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/bold"
                android:textSize="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:id="@+id/tv_rest_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Regular"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/tv_rest_desc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us : "
                        style="@style/semiBold"
                        android:textSize="@dimen/_8sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALL US:"
                            style="@style/semiBold"
                            android:textSize="@dimen/_8sdp"
                            />
                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/_8sdp"
                            style="@style/Regular"
                           />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MAIL US:"
                            style="@style/semiBold"
                            android:textSize="@dimen/_8sdp"
                            />
                        <TextView
                            android:id="@+id/tv_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            style="@style/Regular"
                            android:textSize="@dimen/_8sdp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address : "
                        style="@style/semiBold"
                        android:textSize="@dimen/_8sdp"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        style="@style/Regular"/>
                    <LinearLayout
                        android:id="@+id/ll_navigate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:src="@drawable/navigation_orange"
                            android:rotation="45"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Navigate to Restaurant"
                            style="@style/Regular"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>






</RelativeLayout>