<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.PaymentMethod"
    android:background="@color/bottomnavColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/arrow_left">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            style="@style/bold"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/humara_black"
            android:fontFamily="@font/aero"
            android:padding="10dp"
            android:visibility="gone"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@color/humara_black"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="2dp"> </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/HaveACouponTV"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/semiBold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Have a coupon code ?"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/CouponLayout"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/appliedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupon Applied!"
                        android:textColor="@android:color/holo_green_dark"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/couponEditText"

                        android:hint="Coupon"
                        android:background="@android:color/transparent"
                        style="@style/Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/applyButton"
                        android:text="Apply"
                        style="@style/Regular"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/removeButton"
                        android:text="Remove"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:id="@+id/ProgressBarCoupon"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
<ScrollView
    android:layout_marginBottom="@dimen/_35sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/offerdetails"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/offerdet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer Details"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    style="@style/semiBold"/>

               <View
                   android:id="@+id/linehere"
                   android:layout_width="100dp"
                   android:layout_height="1dp"
                   android:layout_marginTop="3dp"
                   android:layout_marginLeft="10dp"
                   android:background="@color/colorPrimary"
                   android:layout_below="@id/offerdet"/>

                <TextView
                    android:id="@+id/realpricetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price: "
                    android:layout_below="@id/linehere"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/discountedPricetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discounted Price: "
                    android:layout_below="@id/realprice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/savedAmounttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You Saved: "
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/discountedPricetext"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/realprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/linehere"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/discountedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"

                    android:layout_below="@id/realprice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/savedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved Amount: "
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/discountedPrice"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="7dp"/>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/paytm_card"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/cardbgone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/paytm_logo"/>

                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6">
                        <TextView
                            android:paddingTop="@dimen/_7sdp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 XXXXX XXXXX"
                            style="@style/semiBoldWhite"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:fontFamily="@font/aero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* * * * * * * * * * * "
                            style="@style/semiBoldWhite"/>

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="bottom|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="@android:color/white"
                            android:src="@drawable/ic_rupee_indian"/>

                        <TextView
                            android:id="@+id/amount_tv_paytm"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="@dimen/_16sdp"
                            style="@style/semiBoldWhite"/>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/pod_card"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/cardbgtwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cash"/>
                        <TextView
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:text="Pay on dine"
                            style="@style/semiBoldWhite"
                            android:textSize="@dimen/_13sdp"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_15sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">
                        <TextView
                            android:paddingTop="@dimen/_6sdp"
                            android:fontFamily="@font/aero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy your Delicious meal,"
                            style="@style/semiBoldWhite"
                            />
                        <TextView
                            android:fontFamily="@font/aero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="then pay"
                            style="@style/semiBoldWhite" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="bottom|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_rupee_indian"/>

                        <TextView
                            android:id="@+id/amount_tv_pod"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            style="@style/semiBoldWhite"
                            android:textSize="@dimen/_16sdp"
                           />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/amazon"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/amazonbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/amazon"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_15sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">
                        <TextView
                            android:paddingTop="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy your Delicious meal,"
                            style="@style/semiBoldWhite"
                            />
                        <TextView
                            android:paddingTop="@dimen/_7sdp"
                            android:fontFamily="@font/aero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="then pay"
                            style="@style/semiBoldWhite"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="bottom|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_rupee_indian"/>

                        <TextView
                            android:id="@+id/amtv"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            style="@style/semiBoldWhite"
                            android:textSize="@dimen/_16sdp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/gpay"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_13sdp"
                android:background="@drawable/gpaybg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/gpaynew"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_15sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">
                        <TextView
                            android:paddingTop="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy your Delicious meal,"
                           style="@style/semiBoldWhite"
                            />
                        <TextView
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="then pay"
                            style="@style/semiBoldWhite"
                           />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="bottom|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_rupee_indian"/>

                        <TextView
                            android:id="@+id/newtc"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            style="@style/semiBoldWhite"
                            android:textSize="@dimen/_16sdp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/phonepenew"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/gpay"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/phonepe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/phonepenew"/>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_17sdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">
                        <TextView
                            android:paddingTop="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enjoy your Delicious meal,"
                           style="@style/semiBoldWhite"
                            />
                        <TextView
                            android:paddingTop="@dimen/_7sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="then pay"
                           style="@style/semiBoldWhite"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="bottom|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_rupee_indian"/>

                        <TextView
                            android:id="@+id/newtcs"
                            android:paddingTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            style="@style/semiBoldWhite"
                            android:textSize="@dimen/_16sdp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>


    </LinearLayout>
    <TextView
        android:id="@+id/olo"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online payments are highly appreciated"
        style="@style/Regular"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_7sdp"/>



</RelativeLayout>