<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="?attr/actionBarSize">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/arrow_left"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                style="@style/semiBold"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_80sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/logonew"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:fontFamily="@font/thinking_of_betty"/>
        <LinearLayout
            android:paddingLeft="@dimen/_21sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/semiBold"
                android:textSize="@dimen/_14sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/proceed_with_your"/>

            <TextView
                style="@style/bold"
                android:textSize="@dimen/_16sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registration"/>


        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/_22sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/semiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_9sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextName"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:hint="Name"
                    style="@style/semiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_avatar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_12sdp"
               style="@style/semiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_9sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextEmail"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/white"
                    android:hint="@string/email_address"
                   style="@style/semiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/email"
                    android:layout_width="0dp"
                    android:tint="#FF000000"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                style="@style/semiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_9sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLength="10"
                    style="@style/semiBold"
                    android:id="@+id/EditTextNumber"
                    android:inputType="number"
                    android:background="@android:color/white"
                    android:hint="@string/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_telephone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                style="@style/semiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="@dimen/_7sdp"
                android:padding="@dimen/_9sdp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextPassword"
                    android:inputType="textPassword"
                    android:background="@android:color/white"
                    android:hint="Password"
                   style="@style/semiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_key"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBarReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="@string/register"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/colorPrimary"
                style="@style/semiBoldWhite"/>

            <TextView
                android:id="@+id/NavigateToLogin"
                android:textAlignment="center"
                style="@style/Regular"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account_login_now"/>
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>