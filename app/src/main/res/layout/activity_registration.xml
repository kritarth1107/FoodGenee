<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="#6739b7"
            android:textSize="45sp"
            android:padding="25dp"
            android:fontFamily="@font/thinking_of_betty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Genee"/>
        <LinearLayout
            android:paddingLeft="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/cambria"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed with your"/>

            <TextView
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:fontFamily="@font/aero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"/>
        </LinearLayout>

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/cambria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextName"
                    android:inputType="textPersonName"
                    android:background="@android:color/white"
                    android:hint="Name"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_avatar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/cambria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextEmail"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/white"
                    android:hint="Email Address"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_avatar"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/cambria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLength="10"
                    android:id="@+id/EditTextNumber"
                    android:inputType="number"
                    android:background="@android:color/white"
                    android:hint="Phone Number"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_telephone"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="@font/cambria"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"/>
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/EditTextPassword"
                    android:inputType="textPassword"
                    android:background="@android:color/white"
                    android:hint="Password"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"/>
                <ImageView
                    android:src="@drawable/ic_key"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBarReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="#6739b7"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="@font/aero"/>

            <TextView
                android:id="@+id/NavigateToLogin"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cambria"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login Now"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>