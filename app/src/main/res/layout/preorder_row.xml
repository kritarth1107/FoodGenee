<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="@dimen/_8sdp"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_gravity="center"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp">

    <ImageView
        android:id="@+id/im_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Regular"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="TB No : "/>
            <TextView
                android:id="@+id/realTableNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bold"
                android:layout_marginLeft="@dimen/_4sdp"
                android:text="TABLE 100"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10"
            style="@style/Regular"/>


        <TextView
            android:id="@+id/bookTableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Book Table"
            android:gravity="left"
            android:textSize="@dimen/_11sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rectangle"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
          />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/nole"
            android:layout_width="90dp"
            android:layout_height="80dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tableImage"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>



        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book this table"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/bookTable"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nole"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>