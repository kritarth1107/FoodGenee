<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
  >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/goLayout"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:visibility="invisible"
        android:background="@drawable/loader"
        android:id="@+id/startProgress"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/lal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp">

            <RelativeLayout
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="-50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_circle_darkblue"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="220dp"
                    android:tint="@color/colorAccent"
                    android:layout_height="220dp"
                    android:src="@drawable/ic_circle_shape_outline"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/profilePicture"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/demo_user_image"
                    android:layout_height="@dimen/_130sdp"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>

            </RelativeLayout>
            <TextView
                android:id="@+id/redeemNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/_3sdp"
                style="@style/semiBold"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="Redeem List" />

            <View
                android:layout_width="@dimen/_60sdp"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_below="@id/redeemNow"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/_6sdp"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/rateus"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/logout"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_circle">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/star_circle_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/logout"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/editProfile"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/blue_circle">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_power_button"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editProfile"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dark_bg">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/userName"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            style="@style/bold"
            android:textSize="@dimen/_16sdp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/colorViewGray">

        </View>
        <TextView
            android:layout_marginLeft="@dimen/_60sdp"
            android:id="@+id/userEmail"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/_6sdp"
            android:text="Email"
            style="@style/Regular"/>
        <TextView
            style="@style/Regular"
            android:layout_marginLeft="@dimen/_60sdp"
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableLeft="@drawable/phone"
            android:text="Phone"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_60sdp"
            android:gravity="left|center"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/coins"/>
            <TextView
                android:id="@+id/realcoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="0"
                style="@style/bold"
                />
            <!--<TextView
                android:id="@+id/cttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coins"
                android:gravity="center"
                style="@style/semiBold"
                />

            <TextView
                android:id="@+id/realcoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                style="@style/bold"
                android:textSize="@dimen/_20sdp"
                />-->
        </LinearLayout>
    </LinearLayout>



        <LinearLayout
            android:background="#80FFFFFF"
            android:layout_below="@id/lal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top coins scorers"
                style="@style/semiBold"
                android:id="@+id/coinstext"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_16sdp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/semiBold"
                    android:textSize="@dimen/_9sdp"
                    android:text="Technology Provided by FoodQ technologies pvt.ltd."/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                       style="@style/semiBold"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"></TextView>
                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/semiBold"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center"
                        android:layout_weight="1"></TextView>
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/sumtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coinstext"
                style="@style/Regular"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="redeem coins and get exciting offers"/>





