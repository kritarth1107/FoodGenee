<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:elevation="@dimen/_8sdp"
        android:id="@+id/touchCard"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/tranLogo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"/>


            <TextView
                android:id="@+id/tranTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tranLogo"
               style="@style/bold"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_27sdp"
                android:text="PayTM"/>
            <TextView
                android:id="@+id/tranDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tranLogo"
                android:layout_below="@id/tranTitle"
                style="@style/semiBold"
                android:textColor="@color/colorPrimary"

                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="Get meal for 2 days"/>


            <TextView
                android:id="@+id/tranValidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tranLogo"
                android:layout_marginBottom="@dimen/_7sdp"
                android:layout_marginLeft="@dimen/_7sdp"
               style="@style/bold"
                android:textSize="@dimen/_9sdp"
                android:layout_below="@+id/tranDesc"
                android:textColor="@color/DarkRed"
                android:text="Validity"/>

<!--            <TextView-->
<!--                android:id="@+id/reason"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/tranDesc"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:layout_marginRight="90dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_toRightOf="@+id/tranLogo"-->
<!--                android:text="" />-->


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>