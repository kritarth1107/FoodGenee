<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardElevation="5dp">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <ImageView
                    android:id="@+id/food_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_image" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.7">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.75">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/food_title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="0dp"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:text="Food Title"
                                android:textColor="@color/humara_black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_below="@id/food_title_tv"
                                android:id="@+id/sale_price_layout"
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp">

                                <ImageView
                                    android:layout_marginBottom="3dp"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/ic_rupee_grey" />

                                <TextView
                                    android:background="@drawable/strike"
                                    android:id="@+id/price_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textStyle="bold"
                                    android:textColor="#BBBBBB"
                                    android:textSize="10sp" />



                            </LinearLayout>
                            <LinearLayout
                                android:layout_below="@id/sale_price_layout"
                                android:gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                >

                                <ImageView
                                    android:layout_marginBottom="3dp"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_rupee_indian" />

                                <TextView
                                    android:id="@+id/sale_price_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="200"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                            </LinearLayout>
                            <LinearLayout
                                android:paddingLeft="5dp"
                                android:gravity="center_vertical"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/rest_tagline_logo"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_restaurant"/>
                                <TextView
                                    android:id="@+id/lable_tag_tv"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="@color/humara_black"
                                    android:text="Must Try"/>

                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_room_service"/>
                                <TextView
                                    android:id="@+id/serve_line_tv"
                                    android:textSize="10sp"
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:textColor="#AAAAAA"
                                    android:text="Serve for two"/>
                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/not_available_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cambria"
                            android:text="Not Available"
                            android:textColor="@color/DarkRed"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:background="@drawable/corner_bg_primary"
                            android:id="@+id/available_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:id="@+id/subtract_button"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@android:color/black" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:id="@+id/quantity_card"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.4">

                                <LinearLayout
                                    android:background="@color/colorPrimary"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/quantity_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/white" />
                                    </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:visibility="gone"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:id="@+id/add_now_tv"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.4"
                                app:cardBackgroundColor="@android:color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <TextView

                                        android:textAlignment="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Add"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:id="@+id/add_button"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="0.3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+"
                                        android:textColor="@color/colorPrimaryDark" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="8dp"
                    android:alpha="0.1"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>