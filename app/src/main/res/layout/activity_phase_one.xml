<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reginew.PhaseOne">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/phaselogo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logonew"/>

    <TextView
        android:id="@+id/texthey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_26sdp"
        android:layout_below="@+id/phaselogo"
        style="@style/Regular"
        android:text="Hey! Please provide us your mobile number."/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:id="@+id/textinputlayout"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter your phone number"
            style="@style/semiBold"
            android:id="@+id/mobileverification"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textinputlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/colorPrimary"
        android:text="Proceed"
        style="@style/semiBoldWhite"/>


</RelativeLayout>