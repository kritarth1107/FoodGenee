<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    tools:context=".cart.Orders">


    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:id="@+id/toolbar"
            app:titleTextColor="@color/colorPrimary"
            android:elevation="@dimen/_3sdp"
            >
            <TextView
                style="@style/semiBold"
                android:textSize="@dimen/_14sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Orders"
                android:textColor="@color/colorPrimary"
                />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/_40sdp"
            android:elevation="@dimen/_3sdp"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Orders"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/semiBoldWhite"/>
                <View
                    android:id="@+id/v_order"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Table"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/semiBoldWhite"/>
                <View
                    android:id="@+id/v_table"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@color/white"/>
            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/ll_order"
            android:id="@+id/cart_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_below="@id/ll_order"
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            shimmer:duration="800">
            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/shimmer_orderlist" />
                <include layout="@layout/shimmer_orderlist" />
                <include layout="@layout/shimmer_orderlist" />
                <include layout="@layout/shimmer_orderlist" />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/NorOrderFound"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="#ffffff"/>
            <TextView

                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It looks you haven't placed any order yet."
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>